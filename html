        let currentView = 'group';
        let currentCompany = null;
        let chatMode = 'internal';
        let groupParetoChart, groupBudgetChart, compBudgetChart, compParetoChart;

        // --- NAVIGATION ---
        function toggleDropdown(id) { document.getElementById(id).classList.toggle('open'); }
        function toggleChat() { document.getElementById('chat-box').classList.toggle('hidden'); }
        function toggleExportMenu() { document.getElementById('export-menu').classList.toggle('hidden'); }
        
        function showView(viewName) {
            currentView = viewName;
            document.getElementById('view-group').classList.add('hidden');
            document.getElementById('view-company').classList.add('hidden');
            document.getElementById(`view-${viewName}`).classList.remove('hidden');
            if(viewName === 'group') { currentCompany = null; initGroupCharts(); }
        }

        function loadCompany(id) {
            const data = db[id];
            if(!data) return alert("Données non disponibles");
            currentCompany = id;
            showView('company');
            document.getElementById('comp-title').innerText = id;
            document.getElementById('comp-sector').innerText = data.sector;
            
            const riskClass = data.kpi.risk === 'Faible' ? 'bg-good status-good' : (data.kpi.risk === 'Moyen' ? 'bg-warn status-warn' : 'bg-danger status-danger');
            document.getElementById('comp-badge').className = `px-3 py-1 rounded text-sm font-bold ${riskClass}`;
            document.getElementById('comp-badge').innerText = `Risque ${data.kpi.risk}`;
            
            document.getElementById('comp-ca').innerText = data.kpi.ca;
            document.getElementById('comp-margin').innerText = data.kpi.margin;
            document.getElementById('comp-budget-var').innerText = data.kpi.budgetVar;
            document.getElementById('comp-ca-emp').innerText = data.kpi.caEmp;
            document.getElementById('comp-risk').innerText = data.kpi.risk;
            
            renderCompCharts(data);
        }

        // --- GRAPHIQUES ---
        function initGroupCharts() {
            if(groupParetoChart) groupParetoChart.destroy();
            if(groupBudgetChart) groupBudgetChart.destroy();
            
            const ctx1 = document.getElementById('groupParetoChart').getContext('2d');
            groupParetoChart = new Chart(ctx1, {
                type: 'bar', data: { labels: ['ID MOTORS', 'AGRIVET', 'FIRST ENERGY', 'SMTP', 'MABEL', 'Autres'], datasets: [{ label: 'CA', data: [40, 45, 30, 25, 22, 83], backgroundColor: '#319796' }] }
            });

            const ctx2 = document.getElementById('groupBudgetChart').getContext('2d');
            groupBudgetChart = new Chart(ctx2, {
                type: 'line', data: { labels: ['Jan', 'Fév', 'Mar', 'Avr', 'Mai', 'Juin'], datasets: [{ label: 'Budget', data: [30, 32, 35, 38, 40, 42], borderColor: '#cbd5e0', borderDash: [5, 5] }, { label: 'Réel', data: [28, 34, 36, 41, 45, 43], borderColor: '#319795', fill: true }] }
            });
        }

        function renderCompCharts(data) {
            if(compBudgetChart) compBudgetChart.destroy();
            if(compParetoChart) compParetoChart.destroy();
            
            const ctxB = document.getElementById('compBudgetChart').getContext('2d');
            compBudgetChart = new Chart(ctxB, { type: 'bar', data: { labels: ['Jan', 'Fév', 'Mar', 'Avr', 'Mai', 'Juin'], datasets: [{ label: 'Budget', data: data.budget.budget, backgroundColor: 'rgba(203, 213, 225, 0.5)' }, { label: 'Réel', data: data.budget.real, backgroundColor: 'rgba(49, 152, 149, 0.7)' }] } });

            const ctxP = document.getElementById('compParetoChart').getContext('2d');
            compParetoChart = new Chart(ctxP, { type: 'bar', data: { labels: data.products.map(p => p.name), datasets: [{ label: 'CA Produit', data: data.products.map(p => p.value), backgroundColor: '#2b6cb0' }] } });
        }

        initGroupCharts();

        // --- FONCTIONNALITÉS EXPORT ---
        function exportData(type) {
            let dataToExport = [];
            let filename = currentCompany || "Groupe_INVISO";
            
            if (currentView === 'group') {
                dataToExport = [
                    { Entite: "ID MOTORS", CA: "40 Mrd", Marge: "10%", Risque: "Élevé" },
                    { Entite: "AGRIVET", CA: "45 Mrd", Marge: "12%", Risque: "Faible" },
                    { Entite: "FIRST ENERGY", CA: "30 Mrd", Marge: "35%", Risque: "Faible" }
                ];
            } else {
                const d = db[currentCompany];
                dataToExport = [
                    { Indicateur: "Chiffre d'Affaires", Valeur: d.kpi.ca },
                    { Indicateur: "Marge Nette", Valeur: d.kpi.margin },
                    { Indicateur: "Performance Budget", Valeur: d.kpi.budgetVar },
                    { Indicateur: "Risque", Valeur: d.kpi.risk }
                ];
            }

            if(type === 'excel') {
                const ws = XLSX.utils.json_to_sheet(dataToExport);
                const wb = XLSX.utils.book_new();
                XLSX.utils.book_append_sheet(wb, ws, "Rapport");
                XLSX.writeFile(wb, filename + ".xlsx");
            }
            
            else if(type === 'pdf') {
                const { jsPDF } = window.jspdf;
                const doc = new jsPDF();
                doc.text("Rapport INVISO Group - " + filename, 14, 16);
                doc.autoTable({ head: [Object.keys(dataToExport[0])], body: dataToExport.map(Object.values), startY: 20 });
                doc.save(filename + ".pdf");
            }
            
            else if(type === 'word') {
                alert("Export Word simulé (nécéssite une librairie spécifique côté serveur pour un formatage parfait).");
            }
            toggleExportMenu();
        }

        // --- FONCTIONNALITÉ UPLOAD ---
        function openModal() { document.getElementById('upload-modal').classList.add('modal-active'); }
        function closeModal() { document.getElementById('upload-modal').classList.remove('modal-active'); }
        
        function handleFileUpload(event) {
            const file = event.target.files[0];
            if(file) document.getElementById('file-name').innerText = file.name;
        }

        function processUpload() {
            const fileInput = document.getElementById('file-input');
            const file = fileInput.files[0];
            if(!file) return alert("Veuillez choisir un fichier.");

            const reader = new FileReader();
            reader.onload = function(e) {
                alert("Fichier '" + file.name + "' traité avec succès ! \n(Les données sont mises à jour en mémoire).");
                // Simuler une mise à jour de données
                db['AGRIVET'].kpi.ca = "46 Mrd (MàJ)";
                loadCompany('AGRIVET'); // Rechargement simulé
                closeModal();
            };
            reader.readAsArrayBuffer(file);
        }

        // --- BOTINVISIO AI LOGIC ---
        function setChatMode(mode) {
            chatMode = mode;
            document.getElementById('mode-internal').className = mode === 'internal' ? 'px-3 py-1 rounded-full bg-teal-600 text-white font-bold' : 'px-3 py-1 rounded-full bg-gray-200 text-gray-600';
            document.getElementById('mode-web').className = mode === 'web' ? 'px-3 py-1 rounded-full bg-teal-600 text-white font-bold' : 'px-3 py-1 rounded-full bg-gray-200 text-gray-600';
        }

        function sendChat() {
            const input = document.getElementById('chat-input');
            const msg = input.value.trim();
            if(!msg) return;
            
            const history = document.getElementById('chat-history');
            history.innerHTML += `<div class="flex justify-end"><div class="bg-teal-600 text-white p-3 rounded-lg ml-8 text-right">${msg}</div></div>`;
            input.value = '';

            // Typing indicator
            const loaderId = 'loader-' + Date.now();
            history.innerHTML += `<div id="${loaderId}" class="flex items-start space-x-2"><div class="w-8 h-8 rounded-full bg-teal-100 flex items-center justify-center text-teal-600 text-xs"><i class="fas fa-robot"></i></div><div class="bg-gray-100 p-3 rounded-lg"><i class="fas fa-circle-notch fa-spin text-teal-500"></i></div></div>`;
            history.scrollTop = history.scrollHeight;

            setTimeout(() => {
                document.getElementById(loaderId).remove();
                let response = "";
                
                if(chatMode === 'internal') {
                    // Analyse Interne
                    if(msg.toLowerCase().includes('risque')) {
                        response = "Analyse des risques : SMTP et ID MOTORS présentent un risque Élevé. SMTP pour saturation, ID MOTORS pour le BFR.";
                    } else if(msg.toLowerCase().includes('marge')) {
                        response = "La meilleure marge est détenue par FIRST ENERGY (35%), suivie de ID RENTAL (22%). La moyenne groupe est 12.4%.";
                    } else if(msg.toLowerCase().includes('croissance')) {
                        response = "Les entités les plus dynamiques sont MABEL (+8% vs budget) et FIRST ENERGY (+10%).";
                    } else {
                        response = "J'ai analysé les données. Le groupe est en croissance (+15%). Voulez-vous des détails sur un pôle spécifique ?";
                    }
                } else {
                    // Mode Web Scraping (Simulé)
                    response = `<b>[Résultat Web Simulé]</b><br>Recherche : "${msg}"<br>1. <a href='#' class='text-teal-600 underline'>Article sur l'économie Malgache...</a><br>2. <a href='#' class='text-teal-600 underline'>Tendance prix carburant...</a><br><br>Synthèse : Le marché local est stable mais sensible aux fluctuations des prix de l'import.`;
                }

                history.innerHTML += `<div class="flex items-start space-x-2"><div class="w-8 h-8 rounded-full bg-teal-100 flex items-center justify-center text-teal-600 text-xs flex-shrink-0"><i class="fas fa-robot"></i></div><div class="bg-gray-100 p-3 rounded-lg text-gray-700 max-w-[85%]">${response}</div></div>`;
                history.scrollTop = history.scrollHeight;
            }, 1500);
        }
    </script>
</body>
</html>
